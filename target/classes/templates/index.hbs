<div class="bg-warning mb-2 ">
<div class="p-4 mx-auto" style="width: 150px;">
    <h4>Superheroes</h4>
</div>
</div>

<div class="container">
<h4>SuperHeroes</h4>
    {{#if hero}}
        {{#each hero }}
            <div class="card mb-3" style="width: 25rem;">
                <div class="card-body">
                    <h6 class="card-title mb-2">Superhero: <b class="text-danger" >{{name}}</b></h6>
                    <p class="card-subtitle mb-2 ">Special power: <b class="text-danger" >{{specialPower}}</b></p>
                    <p>Age: <b class="text-danger" >{{age}}</b></p>
                    <p>Weakness: <b class="text-danger" >{{weakness}}</b></p>
                </div>
            </div>
        {{/each}}
        <h4>Squads</h4>
        {{#each squad}}
            <b class="text-danger mb-2" >{{name}}</b> <br>
        {{/each}}
        <a href="/delete">Delete</a>
    {{else}}
        <h6 class="text-danger">No superheroes for now</h6>
    {{/if}}
    <h4>Enter your heroic information.</h4>

    <form action="/heroes" method="post" >
        <div class="mb-3">
            <label for="name" class="form-label">Your name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="integer" class="form-control" id="age" name="age">
        </div>
        <div class="mb-3">
            <label for="power" class="form-label">Special power</label>
            <input type="text" class="form-control" id="power" name="power">
        </div>
        <div class="mb-3">
            <label for="weak" class="form-label">Weakness</label>
            <input type="text" class="form-control" id="weakness" name="weakness">
        </div>
        <p>Choose your squad</p>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="squad" id="squad" value="squadA">
            <label class="form-check-label" for="squad">
                The Fighters-Committed to fighting crime.
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="squad" id="squad" value="squadB">
            <label class="form-check-label" for="squad1">
                The winners - Committed to helping the needy.
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="squad" id="squad" value="squadC">
            <label class="form-check-label" for="squad2">
                The foodies - Committed to fighting hunger.
            </label>
        </div>

        <button type="submit" class="btn btn-warning mt-3" >Submit</button>
    </form>

</div>
<div class="bg-warning mb-2 ">
    <div class="p-4 mx-auto" style="width: 150px;">
        <b>Superheroes</b>
        <b>machayoephraim@gmail.com</b>
        <b>Thank you</b>
    </div>
</div>
{{> layout.hbs}}













